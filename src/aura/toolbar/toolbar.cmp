<aura:component description="toolbar">
    <aura:attribute name="config" access="public"
                    type="object"
                    description="Configuration object for the toolbar"/>
    <aura:attribute name="header" type="Aura.Component[]" access="public"/>
    <aura:attribute name="buttons" type="Aura.Component[]" access="public"/>
    <aura:attribute name="footer" type="Aura.Component[]" access="public"/>
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media--center slds-has-flexi-truncate">
                <div class="slds-media__body slds-truncate">
                    <h2>
                        <a href="javascript:void(0);" class="slds-text-link--reset">
                            <span class="slds-text-heading--small">{!v.header}</span>
                        </a>
                    </h2>
                </div>
            </header>
            <div class="slds-no-flex">
                {!v.buttons}
            </div>
        </div>
        <div class="slds-card__body">{!v.body}</div>
        <div class="slds-card__footer">{!v.footer}</div>
    </article>
</aura:component>
